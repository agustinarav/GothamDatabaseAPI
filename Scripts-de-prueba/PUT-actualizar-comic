Método PUT
Request: /comics 
Scripts
Prerequest: 

Post response: 

console.log(pm.response.text());

pm.test("El comic se actualizó correctamente", function () {
    const comic = pm.response.json().comic;

    pm.expect(comic.title).to.equal("Comic actualizado");
    pm.expect(comic.author).to.equal("Autor nuevo");
    pm.expect(comic.year).to.equal(1995);
});

pm.test("Status 200 OK", function () {
    pm.response.to.have.status(200);
});

pm.test("El ID se mantiene", function () {
    const comic = pm.response.json().comic;
    pm.expect(comic.id).to.equal(Number(pm.environment.get("comic_id")));
});

pm.test("Respuesta de PUT es JSON", function () {
    pm.expect(() => pm.response.json()).to.not.throw();
});
